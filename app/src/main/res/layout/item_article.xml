<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Article Image -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/article_image"
            android:background="@color/light_gray"
            tools:src="@tools:sample/backgrounds/scenic"/>

        <!-- Article ID (small and subtle) -->
        <TextView
            android:id="@+id/articleIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textColor="@color/gray"
            tools:text="ID: e21be313"/>

        <!-- Article Title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Sample article title about pizza and other interesting things"/>

        <!-- Source and Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/sourceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@color/colorPrimary"
                tools:text="T-online"/>

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginHorizontal="8dp"
                android:background="@color/gray"/>

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray"
                tools:text="2025-04-18"/>
        </LinearLayout>

        <!-- Article Description -->
        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            tools:text="This is a sample description of the article that provides some details about the content. It may span multiple lines."/>

        <!-- Keywords/Categories -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/keywordsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:flexWrap="wrap"
            app:alignItems="flex_start"
            app:alignContent="flex_start">

            <!-- Keywords will be added programmatically -->
        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>